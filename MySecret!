-- Multiple authorized users who can trigger the kick
local authorizedUsers = {"Nath191_00", "ElNinjaFoxx"}

-- Check if player is allowed to trigger the kick
local function isAuthorized(playerName)
    for _, name in ipairs(authorizedUsers) do
        if playerName == name then return true end
    end
    return false
end

-- Create fake loading UI
